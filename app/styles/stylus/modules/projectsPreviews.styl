.projectsPreviews
  // background yellow
  // padding-top calc(100vh - (40vw + 120px))
  padding-top 80px

  &__item
    margin-bottom 50px
    transition transform 300ms ease

    &.opened
      transform translateX(-31.4vw)

  &__category
    margin-bottom 6px
    opacity .6
    font-size 12px

  &__image
    height 34vw
    // cursor pointer

    & img
      width 100%
      height 100%
      object-fit cover
      pointer-events none
