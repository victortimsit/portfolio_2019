.projectsPreviews
  // background yellow
  // padding-top calc(100vh - (40vw + 120px))
  // padding-top 80px
  perspective 800px
  @media screen and (max-width: $mobile)
    padding-top 0

  &__item
    margin-bottom 50px
    transition transform 150ms ease
    transform-origin left
    &:hover img
      // opacity .8
      transform scale(1.05)

    // &.opened
    //   transform translateX(-31.4vw)

  &__category
    margin-bottom 6px
    opacity .6
    font-size 14px
    height 16px


  &__image
    height 34vw
    overflow hidden
    position relative
    background-color $background
    transition transform $pageTransitionDuration, opacity $pageTransitionDuration
    @media screen and (max-width: $mobile)
      height 52.8vw
    // cursor pointer
    // transition width 300ms, height 300ms, transform 300ms
    // transition scale 300ms, transform 300ms

    // &.activePreview
    //   position fixed
    //   top 50%
    //   left 50%

    & img
      width 100%
      height 100%
      object-fit cover
      pointer-events none
      // transition transform 300ms ease
      transition transform $pageTransitionDuration, opacity $pageTransitionDuration

  & .background__gradient
    opacity 0
    transition opacity $pageTransitionDuration
      
.container.loading
  & .projectsPreviews
    & a
      display block
      background-color $loadingDOM


