.loader
  // background-color $loaderBackground
  position fixed
  left 50%
  top 50%
  transform translate(-50%, -50%)
  visibility hidden
  opacity 0
  z-index 99
  width 20vw
  // width 100
  // height 4px
  height 2px
  outline 1px solid $fonts
  transition-delay 100ms
    

  &__fill
    width 100%
    height 100%
    background-color $fonts
    transform-origin left
    transform scaleX(.1)
    transition transform 150ms
    animation initLoader 300ms

// Init transitions
// .projectsPreviews__image
//     transition transform 3s, opacity 3s
//     transform translateY(0px)
//     opacity 1

.projects 
  transition transform 1s, opacity 1s
  transition-delay 100ms

.projectsTitles
    opacity 1
    transition opacity 1s 
//     transform translateY(0px)
.projectsPreviews
    transform translateY(0px)
    transition transform 1s

// Loading
.loader.loading
  visibility visible
  opacity 1

.loading
  .projects 
    opacity 0
    // transform translateY(100px)

  .projectsPreviews
    transform translateY(200px)

  .projectsTitles
    opacity 0
  //   transform translateY(200px)

  // .projectsPreviews__image
  //   transform translateY(-500px)
  //   opacity 0

@keyframes initLoader {
  0% { transform: scaleX(0) }
  100% { transform: scaleX(.1) }
}