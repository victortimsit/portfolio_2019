.cursor
  width 15px
  height 15px
  position absolute
  top 50%
  left 50%
  // top 0
  // left 0
  pointer-events none

  transform translate(-50%, -50%)

  &__circle
    width 100%
    height 100%

    background-color $cursor
    border-radius 50%

    opacity 0
    visibility hidden
    transform scale(20)

    transition opacity .3s ease, visibility .3s ease, transform .3s ease

    &.active
      opacity 1
      visibility visible
      transform scale(1)

    &.scale
      transform scale(1.8)
      opacity .8

    &.fill
      transform scale(8)
      opacity 1
      transition transform 300ms linear