.projectsTitles
  // background pink
  flex 1
  margin 50px 0

  display flex
  align-items center // center rolling words
  justify-content flex-end
  font-size 14px
  // font-weight bold
  font-family 'Black'
  // text-transform lowercase
  pointer-events none
  user-select none

  &__tab
    text-align right
    overflow-y hidden
    position relative
    transform scale(3)

    flex 1
    @media screen and (max-width: 1200px)
      transform scale(2) translateX(4vw)
    @media screen and (max-width: $mobile)
      transform scale(1)

  li
    margin 10px 0

.container.loading
  & .projectsTitles__list
    & li
      width 100%
      height 20px
      margin-bottom 10px
      // &.loaded
      //   width auto
      //   height auto
      //   margin-bottom 0

.indicator
  width 100%
  height 1px
  background $fonts
  position absolute
  top 50%
  opacity 1
  transform translateY(-50%)
  background-color red
  outline none
  display none