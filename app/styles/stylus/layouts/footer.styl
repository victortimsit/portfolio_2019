footer
  text-align center
  margin-top 200px
  position relative
  z-index 110

  a
    text-decoration underline
    margin-top 50px
    display block
.other
  display flex

  @media screen and (max-width: $mobile)
    a:nth-child(1)
      display block
    a:nth-child(2)
      display none

  @media screen and (max-width: 650px)
    a:nth-child(1)
    a:nth-child(2)
      display none


  &__project
    width auto
    margin 0 10px
    transition transform 400ms ease
    
    &:first-child
      margin-left 0
    &:last-child
      margin-right 0
    &:hover img
      transform scale(1.1)

  &__image
    width 100%
    height 100%
    overflow hidden
    & img
      width 100%
      height 100%
      object-fit cover
      transition transform 500ms ease