section
  margin 100px 0
.section
  &__image 
    width 100%
    height 100%
    position absolute
    flex-shrink 0
    

    transition transform .3s ease
    will-change transform

    & img
      width 100%
      height 100%
      object-fit cover

    &.right
      transform translateX(100%)
    &.left
      transform translateX(-100%)
  &__p
    text-align center
    font-size 14px
    font-family 'Regular'

  &__description
    height 39vw
    width 120px
    font-family 'Bold'

  &--fixed
    width 65vw
    height 39vw
    // height 78vw



&.sticky // 5/3 ratio
  position fixed
  // top 50%
  top 0
  width 65vw
  height 39vw
  display flex
  // left 50%
  overflow hidden
  transform translateY(100vh)
  z-index -1