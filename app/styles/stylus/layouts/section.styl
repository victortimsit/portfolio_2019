section
  margin 100px 0
.section
  &__image 
    width 100%
    height 100%
    position absolute
    flex-shrink 0

    transition transform .3s ease, opacity .3s
    will-change transform
    opacity 1

    & img, video
      width 100%
      height 100%
      object-fit cover

    &.right
      transform translateY(0%) scale(1.04)
      opacity 0
    &.left
      opacity 0
      transform translateY(0%) scale(.96)
  &__p
    font-family 'Regular'
    // width 43vw
    margin 0 auto
    font-size 38px;
    font-family SemiBold
    opacity 0.8
    line-height 1.6
    transform scale(.9)

  &__description
    // height 39vw
    height 60vw
    width 120px
    font-family 'Bold'

  &--fixed
    width 65vw
    height 39vw
    @media screen and (max-width: $mobile)
      width 88vw 
      height 52.8vh
    // height 78vw



&.sticky // 5/3 ratio
  position fixed
  // top 50%
  top 0
  width 65vw
  height 39vw
  display flex
  // left 50%
  overflow hidden
  transform translateY(100vh)
  z-index -1
  @media screen and (max-width: $mobile)
    width 88vw 
    height 52.8vh