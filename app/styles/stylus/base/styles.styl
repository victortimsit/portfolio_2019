body
  line-height 1.4
  font-family Regular
  font-size 16px
  color $fonts
  background-color $background
  padding 50px 6vw
  overflow-x hidden
  // opacity 0
  @media screen and (max-width: $mobile)
    color $white
    // background-color black

h1
  font-size 60px
  font-family Black
  // text-transform uppercase

  // Mask
  font-size 60px
  // background-image url(https://raw.githubusercontent.com/vtimsit/portfolio_2019/master/app/assets/images/projects/player.jpg)
  color rgba(255,255,255,.1) // black theme
  // color rgba(0,0,0,.3) // white theme
  background-size 100%
  opacity .8
  -webkit-background-clip text
  background-attachment fixed
  // text-align 

h2
  margin-bottom 10px

  font-size 16px
  font-family SemiBold

h3
  font-size 16px
  font-family Bold
  margin-bottom 5px
  opacity .8 


.view.loading
  pointer-events none
  // cursor wait
  li:not(.projectsPreviews__item)
    background $loadingDOM

  a
    background $loadingDOM

  img 
    opacity 0