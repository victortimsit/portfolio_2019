body
  line-height 1.4
  font-family Regular
  font-size 16px
  color $fonts
  background-color $background
  padding 50px 6vw
  overflow-x hidden
  overflow-y auto
  // transition height 300ms, perspective 500ms
  transition perspective 500ms
  perspective-origin 0vw -50vh
  // perspective 800px
  // opacity 0
  // @media screen and (max-width: $mobile)
  //   color $white
    // background-color black
  &.perspective
    // perspective 800px
    // overflow hidden

h1
  font-size 120px
  // font-size 120px
  font-family Black
  // color transparent
  // color rgba(255, 255, 255, 1)
  color $fonts
  // color yellow
  opacity 1
  -webkit-background-clip text
  background-attachment fixed
  -webkit-text-stroke: 1px black
  color $background
  @media screen and (max-width: 1200px)
    font-size 80px
  @media screen and (max-width: $mobile)
    font-size 56px

h2
  margin-bottom 24px

  font-size 16px
  font-family SemiBold

h3
  font-size 16px
  font-family Bold
  margin-bottom 5px
  opacity .8 

  @media screen and (max-width: $mobile)
    font-size 12px

.container.loading
  pointer-events none
  // cursor wait
  li:not(.projectsPreviews__item)
    background $loadingDOM

  a
    background $loadingDOM

  img 
    opacity 0