body
  line-height 1.4
  font-family Regular
  font-size 14px
  color $fonts
  background-color $background
  padding 50px 6vw
  overflow-x hidden
  // opacity 0
  @media screen and (max-width: $mobile)
    color $white
    // background-color black

h1
  font-size 90px
  font-family Black
  text-transform uppercase

h2
  margin-bottom 10px

  font-size 16px
  font-family SemiBold

.view.loading
  pointer-events none
  // cursor wait
  li:not(.projectsPreviews__item)
    background $loadingDOM

  a
    background $loadingDOM

  img 
    opacity 0